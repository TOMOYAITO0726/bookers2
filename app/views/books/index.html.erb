<h1>New Book</h1>
<%= form_with model:@book do |f| %>
 <h4>Title</h4>
  <%=f.text_field:title %>
 <h4>Opinion</h4> 
  <%=f.text_area :body %>
  <%=f.submit'Create Book'%>
<% end %>

</div>


<h2>Books</h2>
<table> 
 <thead>
 <th>Title</th>
 <th>Opinion</th>
 <% @books.each do |book| %>
 <tr>
 <td><%=book.title %></td>
 <td><%=book.body %></td>
 <% end %>
 </tr>
 </thead>
</table>