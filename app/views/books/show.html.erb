<div class="container px-5 px-sm-0">
<div class="row">
<div class="col-md-3">

<%=render'books',book: @book_new, user: @user %>
</div>

<div class="col-md-8 offset-md-1">
<h2>Book detail</h2>
<table>
  <tr>
<td><%= image_tag @book.user.get_profile_image(100,100) %></td>    
<td><%=link_to @book.title  %></td>
<td><%=@book.body %></td>

<td><%=link_to"Edit" , edit_book_path(@book.id) %></td>
<td><%=link_to"Destroy" ,book_path(@book.id),method: :delete %></td>
  </tr>
<th><%= link_to @user.name ,user_path(@user.id)%></th>  
</table>
</div>
</div>




