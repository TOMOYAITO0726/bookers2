

<div class="container px-5 px-sm-0">
<div class="row">
<div class="col-md-3">


<%=render'books',book: @book_new, user: @user %>
</div>

<div class="col-md-8 offset-md-1">
<h2>Book detail</h2>
<table class="table">
  <tr>
<td><%= image_tag @book.user.get_profile_image(100,100) %>
<br><%= link_to @user.name ,user_path(@user.id)%>
</td>    
<td><%=link_to @book.title  %></td>
<td><%=@book.body %></td>


<% if @user==current_user %>
<td><%=link_to"Edit" , edit_book_path(@book.id) ,class:"btn btn-success"%></td>
<td><%=link_to"Destroy" ,book_path(@book.id),method: :delete ,class:"btn btn-sm btn-danger"%></td>
<% else %>
 <td></td>
 <td></td>
<% end %> 
  </tr>
</table>
</div>
</div>





